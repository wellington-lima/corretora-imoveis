extends ../layout/index

block conteudo
  .py-10
    h1.text-4xl.my-10.font-extrabold.text-center Imóveis
      span.font-normal Corretora
    h2.text-center.text-2xl.font-extrabold= pagina

    .mt-8.mx-auto.max-w-md 
      .bg-white.py-8.px-4.shadow 
        form.space-y-5
          div
            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") E-mail 
            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="email" name="email" placeholder="E-mail")

          div
            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="senha") Senha
            input#senha.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="password" name="senha" placeholder="Senha")
          
          div.flex.items-center.justify-between 
            a.text-gray-500.text-xs(href="/auth/cadastro") Não tem uma conta? Crie uma
            a.text-gray-500.text-xs(href="/auth/recuperar-senha") Esqueci minha senha            
          
          input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Iniciar sessão")